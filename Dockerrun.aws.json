{
    "AESEBDockerrrunVersion" : 2,
    "containerDefinitions" : [
        {
            "name" : "client",
            "image" : "talal89/docker-react-client",
            "hostname" : "client",
            "essential" : false
        },
        {
            "name" : "server",
            "image" : "talal89/docker-react-server",
            "hostname" : "api",
            "essential" : false
        },
        {
            "name" : "worker",
            "image" : "talal89/docker-react-worker",
            "essential" : false
        },
        {
            "name" : "nginx",
            "image" : "talal89/docker-react-nginx",
            "essential" : true,
            "portMappings" : [
                {
                    "hostPort" : 80,
                    "containerPort" : 80
                }
            ],
            "links" : ["client" , "server"]
        }
    ]
}